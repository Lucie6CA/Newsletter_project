    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonAllArticles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Tous les articles"
        android:textSize="15sp"


        app:cornerRadius="80sp" />

        <Button
            android:id="@+id/buttonByCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par catÃ©gories"
            android:layout_toRightOf="@id/buttonAllArticles"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            app:cornerRadius="80sp"



            />

        <Button
            android:id="@+id/buttonByCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par pays"
            android:layout_below="@id/buttonAllArticles"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            app:cornerRadius="80sp"



            />

        <Button
            android:id="@+id/buttonByEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par Editeur"
            android:layout_below="@id/buttonByCategory"
            android:layout_toRightOf="@id/buttonByCountry"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            app:cornerRadius="80sp"




            />
    <Button
        android:id="@+id/buttonNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News"
        android:layout_below="@id/buttonByCategory"
        android:layout_toRightOf="@id/buttonByEditor"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        app:cornerRadius="80sp"




        />




        <FrameLayout
            android:id="@+id/frameLayout_ListArticles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/buttonByCountry"
            android:layout_marginTop="10dp">

        </FrameLayout>


